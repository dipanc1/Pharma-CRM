{
  "name": "pharma-crm",
  "version": "1.0.0",
  "description": "CRM application for pharmaceutical sales representatives",
  "private": true,
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@supabase/supabase-js": "^2.38.4",
    "date-fns": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "5.0.1",
    "recharts": "^2.8.0"
  },
  "scripts": {
    "start": "set NODE_OPTIONS=--dns-result-order=ipv4first && react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "setup": "set NODE_OPTIONS=--dns-result-order=ipv4first && node setup.js",
    "backup": "set NODE_OPTIONS=--dns-result-order=ipv4first && node database/backup.js",
    "backup:schema": "set NODE_OPTIONS=--dns-result-order=ipv4first && node database/backup.js --schema-only",
    "backup:no-schema": "set NODE_OPTIONS=--dns-result-order=ipv4first && node database/backup.js --no-schema",
    "restore": "set NODE_OPTIONS=--dns-result-order=ipv4first && node database/restore.js",
    "restore:schema": "set NODE_OPTIONS=--dns-result-order=ipv4first && node database/restore-schema.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6"
  }
}